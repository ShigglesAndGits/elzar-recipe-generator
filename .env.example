# Elzar Docker Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================
# GROCY CONFIGURATION (Required)
# ============================================
GROCY_URL=https://your-grocy-instance.com
GROCY_API_KEY=your_grocy_api_key_here

# ============================================
# LLM CONFIGURATION (Required)
# ============================================
# OpenRouter (Recommended - Free Gemini access)
LLM_API_URL=https://openrouter.ai/api/v1
LLM_API_KEY=your_openrouter_api_key_here
LLM_MODEL=google/gemini-2.0-flash-exp:free

# OpenAI Alternative:
# LLM_API_URL=https://api.openai.com/v1
# LLM_API_KEY=your_openai_api_key_here
# LLM_MODEL=gpt-4

# Ollama Alternative (Local):
# LLM_API_URL=http://host.docker.internal:11434/v1
# LLM_API_KEY=ollama
# LLM_MODEL=llama2

# ============================================
# OPTIONAL SETTINGS
# ============================================
# Maximum number of recipes to keep in history
MAX_RECIPE_HISTORY=50

# Apprise notification URL (leave empty to disable)
APPRISE_URL=

# Unit preference (imperial or metric)
UNIT_PREFERENCE=imperial

# Port to expose Elzar on (default: 80)
# Change this if port 80 is already in use
ELZAR_PORT=80
